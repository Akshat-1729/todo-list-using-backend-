                    <option value="clg">College/School</option>
                    <option value="oth">Other</option>
                </select>
            </div>
            <div id="dates">
                <h3>Due Date</h3>
                <input type="date" name="date" id="date-box">
            </div>
            <hr id="line">
            <div class="buttons">
                <button id="add"><i class="fa-sharp fa-solid fa-plus"></i> Add Task</button>
                <button id="delete" ><i class="fa-sharp fa-solid fa-trash"></i>Delete Tasks</button>
            </div>
        </div>
        <section>
            <div>
                <ul>
                    <li>
